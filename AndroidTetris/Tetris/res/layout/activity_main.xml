<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#000000">
    
    
    <ImageView
        android:id="@+id/iv_tetris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"    
        android:layout_marginLeft="20sp"    
        android:src="@drawable/tetris_icon"
        />
    <TextView
        android:id="@+id/tv_tetris"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#bbbbbb"
        android:gravity="left"
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_tetris"  
        android:layout_marginTop="50sp"
        android:text="그럭저럭 괜찮은"
        />
    <TextView
        android:id="@+id/tv_tetris2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#bbbbbb"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_below="@id/tv_tetris"
        android:layout_marginTop="20sp"
        android:text="테트리스"
        />


    <LinearLayout 
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"        
        android:gravity="center_horizontal"
        android:layout_marginBottom="20sp"
        
        >
		<Button 
		    android:id="@+id/startBtn"
		    android:layout_width="100sp"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10sp"
		    android:onClick="mOnClick"
		    android:text="start"
		    />
		<Button 
		    android:id="@+id/showrankBtn"
		    android:layout_width="100sp"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10sp"
		    android:onClick="mOnClick"
		    android:text="rank"
		    />
	
		<Button
		    android:id="@+id/settingBtn"
		    android:layout_width="100sp"
		    android:layout_height="wrap_content"
		    android:onClick="mOnClick"
		    android:layout_marginBottom="10sp"
		    android:text="setting" 
		    />
		<Button
		    android:id="@+id/exitBtn"
		    android:layout_width="100sp"
		    android:layout_height="wrap_content"
		    android:onClick="mOnClick"
		    android:text="exit" 
		    />
	</LinearLayout>

</RelativeLayout>
